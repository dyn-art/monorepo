{
	"name": "@dyn/ui",
	"description": "UI library for dyn.art",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "shx rm -rf dist && pnpm run build:css:tailwind && pnpm run build:css:root && ../../scripts/cli.sh bundle",
		"build:css:root": "tailwindcss -i ./src/styles/root.scss -o ./dist/styles.css",
		"build:css:tailwind": "tailwindcss -i ./src/styles/tailwind.scss -o ./dist/tailwind.css",
		"start:dev": "pnpm run watch:css:tailwind && pnpm run watch:css:root && tsc -w",
		"watch:css:root": "pnpm run build:css:root --watch",
		"watch:css:tailwind": "pnpm build:css:tailwind --watch",
		"lint": "eslint --ext .js,.ts src/",
		"clean": "shx rm -rf dist && shx rm -rf node_modules && shx rm -rf .turbo",
		"install:clean": "pnpm run clean && pnpm install",
		"test": "echo \"Error: no test specified\" && exit 1",
		"update:deps": "pnpm update --latest"
	},
	"source": "./src/index.ts",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/dyndotart/monorepo.git"
	},
	"keywords": [],
	"author": "@bennoinbeta",
	"license": "AGPL-3.0-or-later",
	"bugs": {
		"url": "https://s.dyn.art/github/issues"
	},
	"homepage": "https://s.dyn.art/github",
	"dependencies": {
		"@radix-ui/react-avatar": "^1.0.4",
		"@radix-ui/react-collapsible": "^1.0.3",
		"@radix-ui/react-dropdown-menu": "^2.0.6",
		"@radix-ui/react-icons": "^1.3.0",
		"@radix-ui/react-progress": "^1.0.3",
		"@radix-ui/react-select": "^2.0.0",
		"@radix-ui/react-separator": "^1.0.3",
		"@radix-ui/react-slot": "^1.0.2",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.0.0",
		"tailwind-merge": "^2.0.0",
		"tailwindcss-animate": "^1.0.7"
	},
	"peerDependencies": {
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@dyn/config": "workspace:*",
		"@types/node": "^20.8.10",
		"@types/react": "^18.2.33",
		"@types/react-dom": "^18.2.14",
		"autoprefixer": "^10.4.16",
		"postcss": "^8.4.32",
		"postcss-nested": "^6.0.1",
		"react": "^18.2.0",
		"scss": "^0.2.4",
		"tailwindcss": "^3.3.5"
	},
	"files": [
		"dist",
		"tailwind.config.js",
		"with-dyn-ui.js",
		"README.md"
	]
}
