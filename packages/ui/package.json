{
	"name": "@dyn/ui",
	"description": "UI library for dyn.art",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "shx rm -rf dist && tailwindcss -i ./src/styles/root.scss -o dist/index.css && ../../scripts/cli.sh bundle",
		"start:dev": "tailwindcss -i ./src/styles/root.scss -o ./dist/index.css --watch && tsc -w",
		"lint": "eslint --ext .js,.ts src/",
		"clean": "shx rm -rf dist && shx rm -rf node_modules && shx rm -rf .turbo",
		"install:clean": "pnpm run clean && pnpm install",
		"test": "echo \"Error: no test specified\" && exit 1",
		"update:deps": "pnpm update --latest"
	},
	"exports": {
		".": {
			"source": "./src/index.ts",
			"main": "./dist/cjs/index.js",
			"module": "./dist/esm/index.js",
			"types": "./dist/types/index.d.ts"
		},
		"tailwind": "./tailwind.config.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dyndotart/monorepo.git"
	},
	"keywords": [],
	"author": "@bennoinbeta",
	"license": "AGPL-3.0-or-later",
	"bugs": {
		"url": "https://s.dyn.art/github/issues"
	},
	"homepage": "https://s.dyn.art/github",
	"dependencies": {
		"@radix-ui/react-icons": "^1.3.0",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.0.0",
		"tailwind-merge": "^2.0.0",
		"tailwindcss-animate": "^1.0.7"
	},
	"peerDependencies": {
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@dyn/config": "workspace:*",
		"@types/node": "^20.8.10",
		"@types/react": "^18.2.33",
		"@types/react-dom": "^18.2.14",
		"autoprefixer": "^10.4.16",
		"postcss": "^8.4.32",
		"postcss-nested": "^6.0.1",
		"react": "^18.2.0",
		"scss": "^0.2.4",
		"tailwindcss": "^3.3.5"
	},
	"files": [
		"dist",
		"tailwind.config.js",
		"README.md"
	]
}
