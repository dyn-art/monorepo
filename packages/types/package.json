{
	"name": "@dyn/types",
	"description": "Shared types for dyn.art monorepo",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "shx rm -rf dist && pnpm run gen:openapi && ../../scripts/cli.sh bundle -b typesonly",
		"gen:openapi": "pnpm run gen:openapi:core && pnpm run gen:openapi:graphic",
		"gen:openapi:core": "npx openapi-typescript ./src/core/resources/openapi-v1.yaml -o ./src/core/gen/v1.ts",
		"gen:openapi:graphic": "npx openapi-typescript ./src/graphic/resources/openapi-v1.yaml -o ./src/graphic/gen/v1.ts",
		"lint": "eslint --ext .js,.ts src/",
		"clean": "shx rm -rf dist && shx rm -rf node_modules && shx rm -rf .turbo",
		"install:clean": "pnpm run clean && pnpm install",
		"update:latest": "pnpm update --latest"
	},
	"exports": {
		"./graphic": {
			"source": "./src/graphic/index.ts",
			"types": "./dist/graphic/index.d.ts"
		},
		"./core": {
			"source": "./src/core/index.ts",
			"types": "./dist/core/index.d.ts"
		}
	},
	"typesVersions": {
		"*": {
			"graphic": [
				"./dist/graphic/index.d.ts"
			],
			"core": [
				"./dist/core/index.d.ts"
			],
			"utility": [
				"./dist/utility.d.ts"
			]
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dyn-art/monorepo.git"
	},
	"keywords": [],
	"author": "@bennoinbeta",
	"license": "AGPL-3.0-or-later",
	"bugs": {
		"url": "https://github.com/dyn-art/monorepo/issues"
	},
	"homepage": "https://dyn.art/?source=package-json",
	"devDependencies": {
		"@ibg/config": "^0.0.12"
	},
	"files": [
		"dist",
		"README.md"
	]
}
