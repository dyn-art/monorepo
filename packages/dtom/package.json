{
	"name": "@dyn/dtom",
	"description": "Design Tree Object Model (DTOM) render engine for dyn.art",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "shx rm -rf dist && pnpm run build:rust && pnpm run build:ts",
		"build:rust": "cd ./rust && wasm-pack build --target web --out-dir ../rust_modules/dyn-dtom && cd ..",
		"build:ts": "dyn-cli bundle -f esm",
		"start:dev": "tsc -w",
		"lint": "eslint --cache \"**/*.{js,ts}\"",
		"clean": "shx rm -rf dist && shx rm -rf node_modules && shx rm -rf .turbo",
		"install:clean": "pnpm run clean && pnpm install",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"source": "./src/index.ts",
	"module": "./dist/esm/index.js",
	"types": "./dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/dyndotart/monorepo.git"
	},
	"keywords": [],
	"author": "@bennoinbeta",
	"license": "AGPL-3.0-or-later",
	"bugs": {
		"url": "https://issues.dyn.art/"
	},
	"homepage": "https://github.com/dyndotart/monorepo",
	"devDependencies": {
		"@dyn/config": "workspace:*",
		"@types/node": "^17.0.12",
		"rollup-plugin-copy": "^3.5.0"
	},
	"files": [
		"dist",
		"README.md"
	]
}
