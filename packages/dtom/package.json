{
	"name": "@dyn/dtom",
	"description": "Design Tree Object Model (DTOM) render engine for dyn.art",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "pnpm run build:rust && pnpm run build:ts",
		"build:rust": "shx rm -rf src/rust_modules && dyn-cli bundle rust",
		"build:ts": "shx rm -rf dist && dyn-cli bundle",
		"start:dev": "tsc -w",
		"lint": "eslint --cache \"**/*.{js,ts}\"",
		"clean": "shx rm -rf dist && shx rm -rf node_modules && shx rm -rf .turbo",
		"install:clean": "pnpm run clean && pnpm install",
		"test": "vitest run"
	},
	"source": "./src/index.ts",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/dyndotart/monorepo.git"
	},
	"keywords": [],
	"author": "@bennoinbeta",
	"license": "AGPL-3.0-or-later",
	"bugs": {
		"url": "https://issues.dyn.art/"
	},
	"homepage": "https://github.com/dyndotart/monorepo",
	"devDependencies": {
		"@dyn/config": "workspace:*",
		"@rollup/plugin-wasm": "^6.2.2",
		"@types/node": "^17.0.12"
	},
	"files": [
		"dist",
		"README.md"
	]
}
