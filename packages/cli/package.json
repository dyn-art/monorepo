{
	"name": "@dyn/cli",
	"description": "CLI tool for dyn.art monorepo",
	"version": "0.0.1",
	"private": true,
	"source": "./src/index.ts",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"dyn-cli": "./bin/run"
	},
	"scripts": {
		"build": "tsc && pnpm run link:package",
		"start:dev": "tsc -w",
		"link:package": "pnpm --global unlink dyn-cli && pnpm --global link",
		"lint": "eslint --cache \"**/*.{js,ts}\"",
		"clean": "shx rm -rf dist && shx rm -rf node_modules && shx rm -rf .turbo",
		"install:clean": "pnpm run clean && pnpm install",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dyndotart/monorepo.git"
	},
	"keywords": [],
	"author": "@bennoinbeta",
	"license": "AGPL-3.0-or-later",
	"bugs": {
		"url": "https://issues.dyn.art/"
	},
	"homepage": "https://github.com/dyndotart/monorepo",
	"dependencies": {
		"@oclif/core": "^2.15.0",
		"@rollup/plugin-commonjs": "^25.0.4",
		"chalk": "^4.1.2",
		"figlet": "^1.6.0",
		"rollup": "^3.29.4",
		"rollup-plugin-esbuild": "^6.0.2"
	},
	"devDependencies": {
		"@dyn/config": "workspace:*",
		"@types/figlet": "^1.5.6",
		"@types/node": "^17.0.12",
		"type-fest": "^4.3.3"
	},
	"files": [
		"dist",
		"bin",
		"oclif.manifest.json",
		"README.md"
	],
	"oclif": {
		"bin": "dyn-cli",
		"dirname": "dyn-cli",
		"commands": "./dist/commands",
		"topicSeparator": " ",
		"topics": {
			"bundle": {
				"description": "Bundle dyn.art packages"
			}
		}
	}
}
