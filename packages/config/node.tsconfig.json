// https://github.com/tsconfig/bases/blob/main/bases/node-lts.json
// https://github.com/tsconfig/bases/issues/233
{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node LTS",
	"extends": "./base.tsconfig.json",
	"compilerOptions": {
		// Language and Environmet
		"target": "es2022",
		"lib": ["es2023"],

		// Modules
		"module": "node16",
		"moduleResolution": "node16",

		// Javascript Support
		"allowJs": true,

		// Emit
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src"]
}
