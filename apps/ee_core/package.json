	},
	"homepage": "https://dyn.art/?source=package-json",
	"dependencies": {
		"@auth/drizzle-adapter": "^1.4.1",
		"@auth/express": "^0.5.6",
		"@ibg/openapi-router": "^0.0.6",
		"bcrypt": "^5.1.1",
		"drizzle-orm": "^0.31.2",
		"express": "^4.19.2",
		"feature-logger": "^0.0.15",
		"postgres": "^3.4.4",
