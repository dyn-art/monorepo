{
	"name": "@dyn/core",
	"description": "Core backend",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "shx rm -rf dist && ../../scripts/cli.sh bundle node",
		"start:dev": "nodemon --config ./nodemon.json",
		"gen:openapi": "npx openapi-typescript ./resources/openapi-v1.yaml -o ../../packages/types/src/core/gen/v1.ts",
		"lint": "eslint --ext .js,.ts src/",
		"clean": "shx rm -rf dist && shx rm -rf node_modules && shx rm -rf .turbo",
		"install:clean": "pnpm run clean && pnpm install",
		"test": "vitest run",
		"update:latest": "pnpm update --latest"
	},
	"source": "./src/index.ts",
	"main": "./dist/index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/dyn-art/monorepo.git"
	},
	"keywords": [],
	"author": "@bennoinbeta",
	"license": "AGPL-3.0-or-later",
	"bugs": {
		"url": "https://github.com/dyn-art/monorepo/issues"
	},
	"homepage": "https://dyn.art/?source=package-json",
	"dependencies": {
		"express": "^4.19.2",
		"feature-logger": "^0.0.12",
		"openapi-express": "^0.0.5",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@ibg/config": "^0.0.11",
		"@types/express": "^4.17.21",
		"@types/express-serve-static-core": "^4.19.3",
		"@types/node": "^20.13.0",
		"nodemon": "^3.1.2",
		"openapi-typescript": "^6.7.6",
		"ts-node": "^10.9.2"
	},
	"files": [
		"dist",
		"README.md"
	]
}
