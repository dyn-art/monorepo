{
	"name": "monorepo",
	"description": "Monorepo for dyn.art",
	"private": true,
	"scripts": {
		"build": "pnpm build:cli && turbo run build",
		"build:cli": "turbo run build --filter=cli && chmod +x ./scripts/cli.sh && pnpm run cli:hello",
		"prebuild:vercel": "pnpm run prebuild:rust && pnpm run build:cli",
		"prebuild:rust": "chmod +x ./scripts/vercel/prepare_rust.sh && sh ./scripts/vercel/prepare_rust.sh",
		"start:dev": "turbo run start:dev",
		"clean": "turbo run clean && shx rm -rf node_modules",
		"install:clean": "pnpm run clean && pnpm install",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md,json,js,jsx}\"",
		"update:deps": "turbo run update:deps",
		"cli:hello": "sh ./scripts/cli.sh hello"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/dyndotart/monorepo.git"
	},
	"keywords": [],
	"author": "@bennoinbeta",
	"license": "AGPL-3.0-or-later",
	"bugs": {
		"url": "https://issues.dyn.art/"
	},
	"homepage": "https://github.com/dyndotart/monorepo",
	"devDependencies": {
		"@dyn/cli": "workspace:*",
		"@dyn/config": "workspace:*",
		"@ianvs/prettier-plugin-sort-imports": "^4.1.1",
		"eslint": "^8.52.0",
		"prettier": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.6",
		"shx": "^0.3.4",
		"turbo": "^1.10.16",
		"typescript": "^5.2.2",
		"vitest": "^0.34.6"
	},
	"packageManager": "pnpm@8.10.1"
}
