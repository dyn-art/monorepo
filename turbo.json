{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build:cli": {
			"outputs": ["packages/cli/dist/**"]
		},
		"build": {
			"dependsOn": ["build:cli", "^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"lint": {},
		"start:dev": {
			"cache": false
		},
		"clean": {
			"cache": false
		},
		"update:deps": {
			"cache": false
		}
	}
}
